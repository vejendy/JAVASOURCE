package kr.ac.itschool.gui;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class WindowHelloCickListener implements ActionListener {
	private JTextField text;
	private JLabel label;
	private JButton button1;
	private JButton button2;
	WindowHelloCickListener(JTextField text, JLabel label, JButton button1, JButton button2){
		this.text = text;
		this.label = label;
		this.button1 = button1;
		this.button2 = button2;
		
	}
	@Override
	public void actionPerformed(ActionEvent arg0) {
//		System.out.println("click..."+label.getText()+text.getText());
		label.setText("");
		label.setText(label.getText()+text.getText());
		text.setText("");
	}	
}
