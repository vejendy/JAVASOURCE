		GridLayout layout = new GridLayout(4,4);
		panel1.setLayout(layout);
		contentPane.add(new JButton("1"));
		contentPane.add(new JButton("2"));
		contentPane.add(new JButton("3"));
		contentPane.add(new JButton("+"));
